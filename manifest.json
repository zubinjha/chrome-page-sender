{
  "manifest_version": 3,
  "name": "Chrome Page Sender",
  "version": "0.2.0",
  "description": "A lightweight Chrome extension that captures page content and supports WebSocket-driven link actions.",
  "permissions": ["activeTab", "scripting", "alarms", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*", "http://localhost:*/*", "ws://localhost:*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Send page to local app",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
